<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capremci.VistasSQLite.Elemento">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="mensaje" Padding="10"></Label>

            <Label Text="Nombre:" FontSize="18" ></Label>
            <Entry x:Name="txtNombre" Placeholder="Ingrese Nombre" ></Entry>

            <Label Text="Usuario:" FontSize="18" ></Label>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario" ></Entry>
            <Label Text="Password:" FontSize="18" ></Label>
            <Entry x:Name="txtClave" Placeholder="Ingrese Contraseña" IsPassword="True" ></Entry>


            <Button x:Name="btnActualizar"  WidthRequest="80" HeightRequest="40" Text="Actualizar" Clicked="btnActualizar_Clicked"></Button>
            <Button x:Name="btnEliminar"  WidthRequest="80" HeightRequest="40" Text="Eliminar" Clicked="btnEliminar_Clicked"></Button>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>