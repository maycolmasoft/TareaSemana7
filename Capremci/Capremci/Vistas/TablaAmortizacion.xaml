<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capremci.Vistas.TablaAmortizacion">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="lbl_amortizacion_creditos" HorizontalOptions="Center" FontAttributes="Bold, Italic" FontSize="18" TextColor="Blue" Margin="10"></Label>
            <ListView x:Name="ListaTablaAmortizacion">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding fecha_tabla_amortizacion}"  Detail="{Binding total_valor_tabla_amortizacion}"></TextCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>