<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capremci.Vistas.DetallePagosTablaAmortizacion">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="lbl_detalle_pagos_creditos" HorizontalOptions="Center" FontAttributes="Bold, Italic" FontSize="18" TextColor="Blue" Margin="10"></Label>
            <ListView x:Name="ListaDetallePagos">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding tipo}"  Detail="{Binding valor}"></TextCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>